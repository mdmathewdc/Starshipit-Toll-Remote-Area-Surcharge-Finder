{
  "name": "TOLL RA Surcharge",
  "version": "1.0",
  "description": "Check the surcharge for TOLL remote areas!",
  "permissions": ["declarativeContent","storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.starshipit.com/*"
      ],
      "js": ["content.js"]
    }
  ], 
  "page_action": {
    "default_popup": "popup.html",
	"default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "manifest_version": 2
}